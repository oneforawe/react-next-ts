{
  "files.eol": "\n",
  "editor.rulers": [72, 80],
  "editor.detectIndentation": false,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "markdownlint.config": {
    "default": true,
    "MD024": { "siblings_only": true },
  },
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.pylint": "never",
      "source.fixAll.eslint": "never",
      "source.fixAll.stylelint": "never",
      "source.fixAll.stylefmt": "never",
      "source.fixAll.prettier": "never",
      "source.fixAll.shellcheck": "never",
      "source.fixAll.markdownlint": "explicit",
    },
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.formatOnSave": true,
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "[javascript][typescript][typescriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.pylint": "never",
      "source.fixAll.stylelint": "explicit",
      "source.fixAll.stylefmt": "never",
      "source.fixAll.prettier": "never",
      "source.fixAll.markdownlint": "never",
      "source.fixAll.shellcheck": "never",
      "source.fixAll.eslint": "explicit",
    },
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "stylelint.validate": ["css", "scss"],
  "[css][scss]": {
    // "editor.defaultFormatter": "Jota0222.multi-formatter",
    // "editor.defaultFormatter": "stylelint.vscode-stylelint",
    "editor.defaultFormatter": "ronilaukkarinen.vscode-stylefmt",
    // "editor.defaultFormatter": "esbenp.prettier-vscode",
    "multiFormatter.formatterList": [
      // "stylelint.vscode-stylelint",
      // "ronilaukkarinen.vscode-stylefmt",
      "esbenp.prettier-vscode",
    ],
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.pylint": "never",
      "source.fixAll.eslint": "never",
      "source.fixAll.markdownlint": "never",
      "source.fixAll.shellcheck": "never",
      "source.fixAll.stylelint": "never",
      "source.fixAll.stylefmt": "never",
      "source.fixAll.prettier": "explicit",
    },
  },
  "[python]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "ms-python.pylint",
    "editor.formatOnSave": true,
  },
  "[shellscript]": {
    "files.eol": "\n",
    "editor.insertSpaces": false,
    "editor.defaultFormatter": "timonwong.shellcheck",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.pylint": "never",
      "source.fixAll.eslint": "never",
      "source.fixAll.stylelint": "never",
      "source.fixAll.stylefmt": "never",
      "source.fixAll.prettier": "never",
      "source.fixAll.markdownlint": "never",
      "source.fixAll.shellcheck": "explicit",
    },
  },
  "[powershell]": {
    "files.eol": "\r\n",
  },
  "[csharp]": {
    "files.eol": "\r\n",
    "editor.tabSize": 4,
  },
}